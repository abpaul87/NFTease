<div class="public-gallery-container">
  <div class="dash-main-content">
    <div class="current-gallery">
      <h1><%=@gallery.name%></h1>
      <div class="public-cards">
      <% if !@nfts.nil? %>
        <% @nfts.each do |nft| %>
            <%= link_to gallery_nft_path(@gallery,nft) do %>
              <div class="public-card-nft">
                <%# <div id="app">
                  <div class = "cardish animated"> %>
                <img src="<%=nft.image_url%>">
                <div class="public-card-nft-infos">
                  <div>
                    <h2><%=truncate(nft.token_name, length: 28)%></h2>
                    <p><%=truncate(nft.collection_name, :length =>50)%></p>
                  </div>
                </div>
              </div>
            <%end%>
        <%end%>
      <% end %>
     </div>
  </div>
</div>
