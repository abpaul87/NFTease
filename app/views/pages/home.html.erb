<div class="featured-galleries-home-page-h"><h1>FEATURED GALLERIES</h1></div>

<div class="home-feature-nft-main-div">
  <% @galleries.each do |gallery| %>
    <%= link_to gallery_path(gallery) do %>
      <div class="home-feature-nft-parent-div">
          <% gallery1 = gallery.nfts.first.image_url_small %>
          <% gallery2 = gallery.nfts.last.image_url_small %>
          <% gallery3 = gallery.nfts.sample.image_url_small %>
            <div class="home-feature-image-div">
              <img src="<%=gallery1%>">
              <img src="<%=gallery2%>">
              <img src="<%=gallery3%>">
            </div>
            <div class="home-feature-content-div">
              <h2><%=truncate(gallery.name, length: 40)%></h2>
            </div>
        </div>
    <%end%>
  <%end%>
</div>
